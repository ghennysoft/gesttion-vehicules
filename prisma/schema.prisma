// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Car {
  id Int @id @default(autoincrement())
  dateAchat DateTime
  plaque Int
  marque String
  modele String
  utilisateur String
  dateAssurance DateTime
  dateAssuranceProchaine DateTime
  dateVignette DateTime
  dateVignetteProchaine DateTime
  dateVisite DateTime
  dateVisiteProchaine DateTime
  dateCarteGrise DateTime
  dateCarteGriseProchaine DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("cars")
}